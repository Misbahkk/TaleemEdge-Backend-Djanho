{
  "info": {
    "name": "Workshop Management APIs",
    "description": "Complete API collection for Workshop Management System"
  },
  "requests": [
    {
      "name": "1. ADMIN - Create Workshop (with image/video)",
      "method": "POST",
      "url": "{{base_url}}/api/admin/workshops/",
      "headers": {
        "Authorization": "Bearer {{admin_token}}",
        "Content-Type": "multipart/form-data"
      },
      "body": {
        "mode": "formdata",
        "formdata": [
          {
            "key": "title",
            "value": "Python Django Workshop",
            "type": "text"
          },
          {
            "key": "instructor",
            "value": "John Doe",
            "type": "text"
          },
          {
            "key": "description",
            "value": "Learn Django framework from scratch",
            "type": "text"
          },
          {
            "key": "date",
            "value": "2025-09-15",
            "type": "text"
          },
          {
            "key": "time",
            "value": "10:00:00",
            "type": "text"
          },
          {
            "key": "duration",
            "value": "3 hours",
            "type": "text"
          },
          {
            "key": "capacity",
            "value": "50",
            "type": "text"
          },
          {
            "key": "level",
            "value": "intermediate",
            "type": "text"
          },
          {
            "key": "category",
            "value": "Web Development",
            "type": "text"
          },
          {
            "key": "location",
            "value": "online",
            "type": "text"
          },
          {
            "key": "price",
            "value": "99.99",
            "type": "text"
          },
          {
            "key": "status",
            "value": "upcoming",
            "type": "text"
          },
          {
            "key": "main_image",
            "type": "file",
            "description": "Upload workshop image"
          },
          {
            "key": "video",
            "type": "file",
            "description": "Upload workshop video (optional)"
          }
        ]
      }
    },
    {
      "name": "2. ADMIN - Get My Workshops (with search)",
      "method": "GET",
      "url": "{{base_url}}/api/admin/workshops/?search=python&status=upcoming&level=intermediate",
      "headers": {
        "Authorization": "Bearer {{admin_token}}"
      }
    },
    {
      "name": "3. ADMIN - Get Workshop Detail",
      "method": "GET",
      "url": "{{base_url}}/api/admin/workshops/{{workshop_id}}/",
      "headers": {
        "Authorization": "Bearer {{admin_token}}"
      }
    },
    {
      "name": "4. ADMIN - Update Workshop (with new image)",
      "method": "PUT",
      "url": "{{base_url}}/api/admin/workshops/{{workshop_id}}/",
      "headers": {
        "Authorization": "Bearer {{admin_token}}",
        "Content-Type": "multipart/form-data"
      },
      "body": {
        "mode": "formdata",
        "formdata": [
          {
            "key": "title",
            "value": "Advanced Python Django Workshop",
            "type": "text"
          },
          {
            "key": "instructor",
            "value": "John Doe",
            "type": "text"
          },
          {
            "key": "description",
            "value": "Advanced Django concepts and best practices",
            "type": "text"
          },
          {
            "key": "date",
            "value": "2025-09-15",
            "type": "text"
          },
          {
            "key": "time",
            "value": "10:00:00",
            "type": "text"
          },
          {
            "key": "duration",
            "value": "4 hours",
            "type": "text"
          },
          {
            "key": "capacity",
            "value": "30",
            "type": "text"
          },
          {
            "key": "level",
            "value": "advanced",
            "type": "text"
          },
          {
            "key": "category",
            "value": "Web Development",
            "type": "text"
          },
          {
            "key": "location",
            "value": "online",
            "type": "text"
          },
          {
            "key": "price",
            "value": "149.99",
            "type": "text"
          },
          {
            "key": "main_image",
            "type": "file",
            "description": "Upload new workshop image"
          }
        ]
      }
    },
    {
      "name": "5. ADMIN - Delete Workshop",
      "method": "DELETE",
      "url": "{{base_url}}/api/admin/workshops/{{workshop_id}}/",
      "headers": {
        "Authorization": "Bearer {{admin_token}}"
      }
    },
    {
      "name": "6. ADMIN - Dashboard Stats",
      "method": "GET",
      "url": "{{base_url}}/api/admin/dashboard/stats/",
      "headers": {
        "Authorization": "Bearer {{admin_token}}"
      }
    },
    {
      "name": "7. ADMIN - Workshop Enrollments Detail",
      "method": "GET",
      "url": "{{base_url}}/api/admin/workshops/{{workshop_id}}/enrollments/",
      "headers": {
        "Authorization": "Bearer {{admin_token}}"
      }
    },
    {
      "name": "8. STUDENT - Get All Workshops (with filters)",
      "method": "GET",
      "url": "{{base_url}}/api/workshops/?search=django&category=Web Development&level=intermediate&status=upcoming",
      "headers": {
        "Authorization": "Bearer {{student_token}}"
      }
    },
    {
      "name": "9. STUDENT - Get Workshop Detail",
      "method": "GET",
      "url": "{{base_url}}/api/workshops/{{workshop_id}}/",
      "headers": {
        "Authorization": "Bearer {{student_token}}"
      }
    },
    {
      "name": "10. STUDENT - Enroll in Workshop",
      "method": "POST",
      "url": "{{base_url}}/api/workshops/{{workshop_id}}/enroll/",
      "headers": {
        "Authorization": "Bearer {{student_token}}",
        "Content-Type": "application/json"
      },
      "body": {
        "mode": "raw",
        "raw": "{}"
      }
    },
    {
      "name": "11. STUDENT - Unenroll from Workshop",
      "method": "DELETE",
      "url": "{{base_url}}/api/workshops/{{workshop_id}}/unenroll/",
      "headers": {
        "Authorization": "Bearer {{student_token}}"
      }
    },
    {
      "name": "12. STUDENT - Get My Enrolled Workshops",
      "method": "GET",
      "url": "{{base_url}}/api/student/enrolled-workshops/?status=upcoming&search=python",
      "headers": {
        "Authorization": "Bearer {{student_token}}"
      }
    },
    {
      "name": "13. STUDENT - Dashboard Stats",
      "method": "GET",
      "url": "{{base_url}}/api/student/dashboard/",
      "headers": {
        "Authorization": "Bearer {{student_token}}"
      }
    },
    {
      "name": "14. Get Workshop Categories",
      "method": "GET",
      "url": "{{base_url}}/api/workshops/categories/",
      "headers": {
        "Content-Type": "application/json"
      }
    }
  ],
  "variables": {
    "base_url": "http://localhost:8000",
    "admin_token": "your_admin_jwt_token_here",
    "student_token": "your_student_jwt_token_here",
    "workshop_id": "1"
